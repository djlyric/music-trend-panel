# Database Configuration
DATABASE_URL=postgresql://admin:your_secure_password@localhost:5432/music_trends
DB_PASSWORD=your_secure_password

# Redis Cache
REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=3600

# Apple Music API
# Get from: https://developer.apple.com/account/
APPLE_TEAM_ID=YOUR_TEAM_ID
APPLE_KEY_ID=YOUR_KEY_ID
APPLE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----

# YouTube Data API v3
# Get from: https://console.cloud.google.com/apis/credentials
YOUTUBE_API_KEY=YOUR_API_KEY

# Spotify Web API
# Get from: https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=YOUR_CLIENT_ID
SPOTIFY_CLIENT_SECRET=YOUR_CLIENT_SECRET

# Optional: Last.fm API
# Get from: https://www.last.fm/api/account/create
LASTFM_API_KEY=YOUR_API_KEY
LASTFM_ENABLED=false

# Optional: Beatport API (Partner Program only)
# Contact: https://www.beatport.com/partners
BEATPORT_API_KEY=YOUR_API_KEY
BEATPORT_ENABLED=false

# Application Settings
DEFAULT_REGION=DE
DEFAULT_GENRE=techhouse
LOG_LEVEL=INFO
ENVIRONMENT=development

# API Rate Limits
APPLE_MUSIC_REQUESTS_PER_MINUTE=30
YOUTUBE_DAILY_QUOTA=10000
SPOTIFY_REQUESTS_PER_SECOND=10

# Feature Flags
ENABLE_MUSICBRAINZ_ENRICHMENT=true
ENABLE_BUY_LINKS=true
ENABLE_TREND_VELOCITY=false